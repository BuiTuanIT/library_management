    @model WebApp.Models.User
    @{
        ViewData["Title"] = "Hồ sơ cá nhân";
    }

    <!-- Bootstrap & Custom CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/profile.css" rel="stylesheet" />

    <style>
        .table-container {
            max-height: 200px;
            overflow-y: auto;
        }
        .table-container thead th {
            position: sticky;
            top: 0;
            background: white;
            z-index: 1;
        }
    </style>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-4 shadow-sm">
                <div class="text-center mb-4">
                    <img src="~/images/avatar-default.png" alt="Avatar" class="rounded-circle" width="120" height="120" />
                    <h5 class="mt-3">@Model.email</h5>
                    <p class="text-muted">Mã SV: @Model.student_code</p>
                </div>

                <div class="d-grid gap-3">
                    <a href="~/Profile/Index" class="btn btn-primary btn-lg">Hồ sơ cá nhân</a>
                    <a href="~/History/Index" class="btn btn-primary btn-lg">Lịch sử Checkin</a>
                    <a href="~/Booking/Index" class="btn btn-primary btn-lg">Đặt chỗ Mượn Thiết Bị</a>
                    <a href="~/Violation/Index" class="btn btn-primary btn-lg">Thông tin vi phạm</a>
                    <a href="~/Login/Logout" class="btn btn-danger btn-lg">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-10 p-5">
                <!-- Thông tin cá nhân -->
                <div class="card p-4 shadow-sm mb-4">
                    <h5 class="mb-4">Thông tin cá nhân</h5>

                    @if (TempData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMsg"]</div>
                    }
                    @if (TempData["ErrorMsg"] != null)
                    {
                        <div class="alert alert-danger">@TempData["ErrorMsg"]</div>
                    }

                    <form asp-action="Update" name="Update" method="post" id="updateForm">
                        <div class="row">
                            <!-- Cột trái -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Tên đăng nhập</label>
                                    <input type="text" class="form-control" value="@Model.UserName" disabled>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="email" value="@Model.email" required>
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Số điện thoại</label>
                                    <input type="tel" class="form-control" name="phone" value="@Model.phone" pattern="[0-9]{10}" title="Số điện thoại phải có 10 chữ số">
                                    <span asp-validation-for="phone" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Cột phải -->
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Mã sinh viên</label>
                                    <input type="text" class="form-control" name="student_code" value="@Model.student_code" required>
                                    <span asp-validation-for="student_code" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Ngày sinh</label>
                                    <input type="date" class="form-control" name="Birthday" value="@(Model.Birthday?.ToString("yyyy-MM-dd"))">
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Giới tính</label>
                                    <select class="form-select" name="Sex">
                                        <option value="">Chọn giới tính</option>
                                        <option value="Nam" @(Model.Sex == "Nam" ? "selected" : "")>Nam</option>
                                        <option value="Nữ" @(Model.Sex == "Nữ" ? "selected" : "")>Nữ</option>
                                        <option value="Khác" @(Model.Sex == "Khác" ? "selected" : "")>Khác</option>
                                    </select>
                                    <span asp-validation-for="Sex" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary px-4" onclick="return confirm('Bạn có chắc muốn cập nhật thông tin?')">Cập nhật</button>
                        </div>
                    </form>
                </div>

                <!-- Lịch sử Check-in -->
                <div class="card p-4 shadow-sm">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Lịch sử Check-in</h5>
                        <form asp-action="CheckIn" method="post">
                            <button type="submit" class="btn btn-success">Check-in</button>
                        </form>
                    </div>

                    <div class="table-container">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Thời gian check-in</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var accessLogs = ViewBag.AccessLogs as List<WebApp.Models.StudyAreaAccessLogs>;
                                    if (accessLogs != null && accessLogs.Any())
                                    {
                                        for (int i = 0; i < accessLogs.Count; i++)
                                        {
                                            <tr>
                                                <td>@(i + 1)</td>
                                                <td>@accessLogs[i].AccessTime.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="2" class="text-center">Chưa có lịch sử check-in</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script>
            $(document).ready(function() {
                $('#updateForm').on('submit', function(e) {
                    console.log('Form đang được submit');
                    var formData = $(this).serialize();
                    console.log('Form data:', formData);
                });
            });
        </script>
    }
