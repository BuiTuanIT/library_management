@model WebApp.Models.User
@{
    ViewData["Title"] = "Đăng nhập";
    var errorMsg = TempData["ErrorMsg"] as string;
    var successMsg = TempData["SuccessMsg"] as string;
    var googleLoginUrl = ViewBag.GoogleLoginUrl as string;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
<link rel="stylesheet" href="~/css/login.css" />

<div class="login-container">
    <h3 class="text-center">Đăng nhập</h3>

    @if (!string.IsNullOrEmpty(errorMsg))
    {
        <div class="alert alert-danger text-center">@errorMsg</div>
    }
    @if (!string.IsNullOrEmpty(successMsg))
    {
        <div class="alert alert-success text-center">@successMsg</div>
    }

    <form asp-action="Index" method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Tên đăng nhập</label>
            <input name="UserName" asp-for="UserName" class="form-control" id="username" required />
        </div>
        <div class="mb-4">
            <label for="password" class="form-label">Mật khẩu</label>
            <input name="Password" asp-for="Password" type="password" class="form-control" id="password" required />
        </div>
        <button type="submit" class="btn btn-login w-100 text-white">Đăng nhập</button>
    </form>

    <div class="text-center mt-3">
        <a href="/User/ForgotPassword" class="text-link">Quên mật khẩu?</a>
    </div>
    <div class="text-center mt-3">
        <p class="mb-2">Chưa có tài khoản? <a href="/Register" class="text-link">Đăng ký ngay</a></p>
    </div>

    @if (!string.IsNullOrEmpty(googleLoginUrl))
    {
        <div class="mt-4">
            <a href="@googleLoginUrl" class="btn btn-google w-100">
                <i class="bi bi-google me-2"></i>Đăng nhập bằng Google
            </a>
        </div>
    }
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
